CXX       = g++
CPPFLAGS  = -O0 -g -std=c++11 -Wall -Wextra -Wpadded -m64 -isystem ${MKLROOT}/include
LIBS      = -larmadillo -L${MKLROOT}/lib/intel64 -Wl,--no-as-needed -lmkl_intel_lp64 -lmkl_gnu_thread -lmkl_core -lgomp -lpthread -lm -ldl

OBJS      = lanczos.o sparse.o operators.o basis.o main.o

OPTS      = 

EXEC      = ../bin/test.x


all: $(OBJS)
	$(CXX) $(OBJS) $(OPTS) $(LIBS) -o $(EXEC)

%.o: %.cc
	$(CXX) $(CPPFLAGS)  -c -o $@ $<

clean:
	$(RM) *.o
