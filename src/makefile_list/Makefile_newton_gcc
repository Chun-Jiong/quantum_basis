CXX       = g++
CPPFLAGS  = -O2 -std=c++11 -Wall -Wextra -m64 -fopenmp -isystem ${BOOST_DIR}/include -isystem ${MKLROOT}/include -isystem ${HOME}/opt/arpackpp/include -isystem ${HOME}/opt/arpackpp/examples/areig
LIBS      = -L${HOME}/opt/ARPACK -larpack -lgfortran -L${MKLROOT}/lib/intel64 -Wl,--no-as-needed -lmkl_gf_lp64 -lmkl_intel_thread -lmkl_core -liomp5 -lpthread -lm -ldl -fopenmp

OBJS      = lattice.o miscellaneous.o model.o measure.o lanczos.o sparse.o operators.o basis.o

OPTS      = 

EXEC      =

test: $(OBJS) test.o
	$(CXX) $(OBJS) test.o $(OPTS) $(LIBS) -o ../bin/test.x

xxz: $(OBJS) chain_xxz.o
	$(CXX) $(OBJS) chain_xxz.o $(OPTS) $(LIBS) -o ../bin/xxz.x

libqbasis.a: $(OBJS)
	ar rvs libqbasis.a $(OBJS)

install: libqbasis.a
	$(RM) ${HOME}/installs/lib/libqbasis.*; cp libqbasis.a ${HOME}/installs/lib; cp qbasis.h ${HOME}/installs/include

%.o: %.cc
	$(CXX) $(CPPFLAGS)  -c -o $@ $<

clean:
	$(RM) *.o *.a
