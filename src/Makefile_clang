CXX       = clang++
CPPFLAGS  = -O2 -std=c++11 -Weverything -Wno-c++98-compat -Wno-extra-semi -isystem /usr/local/Cellar/boost/1.61.0_1/include
LIBS      =

OBJS      = basis.o main.o

OPTS      = 

EXEC      = ../bin/test.x


all: $(OBJS)
	$(CXX) $(OBJS) $(OPTS) $(LIBS) -o $(EXEC)

%.o: %.cc
	$(CXX) $(CPPFLAGS)  -c -o $@ $<

clean:
	$(RM) *.o
